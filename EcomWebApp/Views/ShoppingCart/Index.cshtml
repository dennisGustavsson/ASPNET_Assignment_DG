@model ShoppingCartViewModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <div class="cart-container">
        <div class="cart-header">
            <h2>Shopping Cart</h2>
            <div class="cart-items">

            
            @if(Model.Cart != null && Model.Cart.Any())
            {
                @foreach (var item in Model.Cart)
                {
                    <div class="cart-card">
                            <div class="cart-item">
                                <div class="product-name">
                                    @item.ProductName
                                </div>
                                <div>
                                    Quantity:
                                    <span class="quantity">

                                        @item.Quantity
                                    </span>

                                </div>
                                <div>
                                    Price:
                                    <span class="price">

                                        @item.Price
                                    </span>
                                </div>

                                <span>
                                    <form asp-controller="ShoppingCart" asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button class="btn-clean" type="submit">Remove from cart x</button>
                                    </form>
                                </span>

                            </div>
                            <span class="product-image">
                                @if (item.ImageUrl == null)
                                {
                                    <img src="/images/placeholders/501x430.svg" alt="@item.ProductName">
                                }
                                else
                                {

                                    <img src="/images/products/@item.ImageUrl" alt="@item.">
                                }
                            </span>
                    </div>
                    
                }
                
            } else
            {
                <span>Your cart is empty</span>
            }
            </div>
        </div>
    </div>
</div>