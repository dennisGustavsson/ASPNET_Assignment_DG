@model CreateTagsViewModel


<section class="product-manager">
	<div class="container">
		<div class="title">Add a new Tag</div>

		<form method="post" novalidate>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="tagName form-group">
				<label asp-for="TagName"></label>
				<input asp-for="TagName" id="tagName" required/>
				<span asp-validation-for="TagName" id="spanErrorTagName" class="error"></span>
			</div>


			<button class="btn-theme" type="submit">Add Tag</button>
		</form>
	</div>
</section>

