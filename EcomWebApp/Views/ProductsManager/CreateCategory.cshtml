@model ProductCategoryViewModel


<section class="product-manager">
	<div class="container">
		<div class="title">Add a new Category</div>

		<form method="post" novalidate>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="newcategory form-group">
				<label asp-for="CategoryName"></label>
				<input asp-for="CategoryName" id="newCategory" required />
				<span asp-validation-for="CategoryName" id="spanErrorNewCategory" class="error"></span>
			</div>


			<button class="btn-theme" type="submit">Add Category</button>
		</form>
	</div>
</section>