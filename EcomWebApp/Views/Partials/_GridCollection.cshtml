@model GridCollectionViewModel



<!-- GRID COLLECTION-->
@if (Model != null)
{
    <section class="grid-collection">
        <div class="container">

            <h1 class="title">@Model.Title</h1>

            @if (Model.Categories != null)
            {
                <ul class="categories">
                    <li class="category-item">

                    <a asp-controller="products" asp-action="index" class="link">All</a>
                    </li>
                    @foreach (var category in Model.Categories)
                    {
                        <li class="category-item">
                            <a asp-controller="products" asp-action="index" asp-route-category="@category" class="">@category</a>
                            
                            </li>
                    }

                </ul>
            }

            @if (Model.GridItems != null)
            {
                <div class="grid">

                    @foreach (var item in Model.GridItems)
                    {
                        <partial name="/Views/Partials/_GridItem.cshtml" model="item" />
                    }

                </div>
            }

            @if (Model.LoadMore)
            {
                <div class="load-more">
                    <button class="btn-outline-white">LOAD MORE <i class="fa-solid fa-rotate-right"></i></button>
                </div>
            }

        </div>
    </section>
}