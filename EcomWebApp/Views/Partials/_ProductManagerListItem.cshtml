@model ProductModel

<div class="product-list-item">
	<div class="listviewrow">
		<img src="@Model.HeroImageUrl" alt="placeholder" />
		<div class="name">@Model.Name</div>
		<div class="price">$@Model.Price.ToString("F2")</div>
		<div class="category">@Model.Category</div>
	</div>
	<a asp-action="details" asp-controller="products" asp-route-id="@Model.Id">details</a>
	<div class="description">
		<div>@Model.Description</div>
	</div>
</div>