@model GridItemViewModel



<a asp-controller="productdetails" asp-action="index" asp-route-id="@Model.Id" class="collection-item">
    <img src="@Model.ImageUrl" alt="@Model.Title">
    <div class="body">
        <div class="item-title">@Model.Title</div>
        <div class="info">
            <div class="price">$@Model.Price</div>
            <i class="add-cart fa-regular fa-cart-plus"></i>
        </div>
    </div>
</a>
